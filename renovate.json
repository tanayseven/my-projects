{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":dependencyDashboard",
    ":enablePreCommit"
  ],

  "timezone": "Asia/Kolkata",

  "dependencyDashboard": true,

  "labels": ["dependencies", "renovate"],

  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,

  "rebaseWhen": "behind-base-branch",

  "platformAutomerge": false,

  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on monday"]
  },

  "enabledManagers": [
    "pip_requirements",
    "pep621",
    "asdf",
    "pre-commit",
    "github-actions"
  ],

  "packageRules": [
    {
      "matchManagers": ["pip_requirements", "pep621"],
      "groupName": "Python dependencies (uv)",
      "schedule": ["before 6am on monday"]
    },

    {
      "matchManagers": ["asdf"],
      "groupName": "asdf tools",
      "schedule": ["before 6am on monday"]
    },

    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },

    {
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ],

  "pip_requirements": {
    "fileMatch": ["requirements\\.txt$", "requirements-.*\\.txt$"]
  },

  "pep621": {
    "fileMatch": ["pyproject\\.toml$"]
  },

  "asdf": {
    "fileMatch": ["\\.tool-versions$"]
  },

  "ignoreDeps": [],

  "vulnerabilityAlerts": {
    "enabled": true
  }
}
